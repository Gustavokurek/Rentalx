{
  "openapi": "3.0.0",
  "info": {
    "title": "RentalX Doc",
    "description": "this is an API Rent",
    "version": "1.0.0",
    "contact": { "email": "gustavokureksz@gmail.com" }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "create a category",
        "description": "create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nameCategory": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "exemple": {
                  "nameCategory": "Category Name exemple",
                  "description": "exemple of description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created"
          },
          "500": {
            "description": "Category already exist"
          }
        }
      },
      "get": {
        "tags": ["Category"],
        "summary": "list all categories",
        "description": "list all categories",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "nameCategory": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
